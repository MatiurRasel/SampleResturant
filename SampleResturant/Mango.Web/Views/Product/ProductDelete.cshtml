@model Mango.Web.Models.ProductDTO

<form asp-action="ProductDelete">
    <input asp-for="ProductId" hidden />
    <br />
    <h1 class="text-primary">Delete Product</h1>
    <hr />
    <div class="row">
        <div class="col-2">
            <label asp-for="ProductName" class="control-label pt-2" style="font-size:20px;"></label>
        </div>
        <div class="col-10 pb-3">
            <input asp-for="ProductName" disabled class="form-control" />
        </div>
        <div class="col-2">
            <label asp-for="CategoryName" class="control-label pt-2" style="font-size:20px;"></label>
        </div>
        <div class="col-10 pb-3">
            <input asp-for="CategoryName" disabled class="form-control" />
        </div>
        <div class="col-2">
            <label asp-for="ProductDescription" class="control-label pt-2" style="font-size:20px;"></label>
        </div>
        <div class="col-10 pb-3">
            <input asp-for="ProductDescription" disabled class="form-control" rows="5" />
        </div>
        <div class="col-2">
            <label asp-for="ImageUrl" class="control-label pt-2" style="font-size:20px;"></label>
        </div>
        <div class="col-10 pb-3">
            <input asp-for="ImageUrl" disabled class="form-control" />
        </div>
        <div class="col-2">
            <label asp-for="Price" class="control-label pt-2" style="font-size:20px;"></label>
        </div>
        <div class="col-10 pb-3">
            <input asp-for="Price" disabled class="form-control" />
        </div>
        <div class="col-5 offset-2">
            <a asp-action="ProductIndex" class="btn-primary btn form-control">Back to List</a>
        </div>
        <div class="col-5">
            <input type="submit" value="Delete" class="btn  btn-danger form-control" />
        </div>
    </div>
</form>
